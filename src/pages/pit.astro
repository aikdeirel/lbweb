---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/PageHeader.astro';
import pitData from '../../lbw-data/pit.json';
---

<Layout title="Pit">
	<PageHeader 
		title="raw noise from the pit"
		subtitle="here we will randomly publish unedited rehearsal recordings"
		narrow={true}
	>
		{pitData.map(item => (
			<div class="pit-content">
				<img src={item.picture_large} alt={item.picture_alt} />
				<div class="tracks">
					{item.tracks.map(track => (
						<div class="track">
							<audio controls>
								<source src={track.source} type="audio/mpeg">
								Your browser does not support the audio element.
							</audio>
						</div>
					))}
				</div>
			</div>
		))}
	</PageHeader>
</Layout>

<style>
	.pit-content {
		margin-top: 2rem;
	}

	.pit-content img {
		width: 100%;
		max-width: 400px;
		height: auto;
		margin: 0 auto 2rem;
		display: block;
	}

	.tracks {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.track {
		background: rgba(255, 255, 255, 0.05);
		padding: 1rem;
		border-radius: 4px;
	}

	audio {
		width: 100%;
	}

	audio::-webkit-media-controls-panel {
		background: rgba(255, 255, 255, 0.1);
	}
</style>