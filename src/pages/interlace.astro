---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Interlace">
	<section>
		<h1>feel free to contact us</h1>
		<p class="subtitle">we read all of our mails and will answer every single one. except offers for galvanized wire mesh. please stop sending us offers for galvanized wire mesh. we don't need galvanized wire mesh. thank you.</p>
		
		<div class="contact">
			<a href="mailto:liquidbarbedwire@gmail.com" class="email-link">interlace: liquidbarbedwire@gmail.com</a>
		</div>
	</section>
</Layout>

<style>
	section {
		max-width: 800px;
		margin: 0 auto;
	}

	h1 {
		font-size: 2.5rem;
		margin-bottom: 0.5rem;
		color: var(--accent-color);
	}

	.subtitle {
		font-size: 1.2rem;
		margin-bottom: 2rem;
		opacity: 0.8;
	}

	.contact {
		margin-top: 3rem;
		text-align: center;
	}

	.email-link {
		color: var(--text-color);
		text-decoration: underline;
		font-size: 1.2rem;
	}

	.email-link:hover {
		opacity: 0.7;
	}
</style>