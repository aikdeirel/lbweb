---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/PageHeader.astro';
---

<Layout title="Interlace">
	<PageHeader 
		title="feel free to contact us"
		subtitle="we read all of our mails and will answer every single one. except offers for galvanized wire mesh. please stop sending us offers for galvanized wire mesh. we don't need galvanized wire mesh. thank you."
		narrow={true}
	>
		<div class="contact">
			<a href="mailto:liquidbarbedwire@gmail.com" class="email-link">interlace: liquidbarbedwire@gmail.com</a>
		</div>
	</PageHeader>
</Layout>

<style>
	.contact {
		margin-top: 3rem;
		text-align: center;
	}

	.email-link {
		color: var(--text-color);
		text-decoration: underline;
		font-size: 1.2rem;
	}

	.email-link:hover {
		opacity: 0.7;
	}
</style>