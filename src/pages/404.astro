---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404">
	<section>
		<div class="glitch-container">
			<div class="text-glow"></div>
			<p class="subtitle glitch-text" data-text="the page you're looking for seems to have vanished into the void.">
				the page you're looking for seems to have vanished into the void.
			</p>
		</div>
		<p class="back-text">go <a href="/" class="back-link">back to the shack</a>, where it is warm and safe</p>
	</section>
</Layout>

<style>
	section {
		max-width: 100vw;
		width: 100%;
		margin: 0;
		padding: var(--spacing-md) var(--spacing-sm);
		text-align: center;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		min-height: 80vh;
		position: relative;
		z-index: 2;
		overflow-x: hidden;
	}

	.glitch-container {
		position: relative;
		margin-bottom: var(--spacing-lg);
	}

	.text-glow {
		position: absolute;
		top: 50%;
		left: 50%;
		width: 200%;
		height: 200%;
		background: radial-gradient(
			ellipse at center,
			rgba(212, 212, 212, 0.1) 0%,
			transparent 70%
		);
		transform: translate(-50%, -50%) rotate(-8deg) translateZ(-50px);
		filter: blur(20px);
		pointer-events: none;
		mix-blend-mode: soft-light;
		animation: glowPulse 4s ease-in-out infinite;
	}

	@keyframes glowPulse {
		0%, 100% {
			opacity: 0.5;
			transform: translate(-50%, -50%) rotate(-8deg) translateZ(-50px);
		}
		50% {
			opacity: 0.3;
			transform: translate(-50%, -50%) rotate(-8deg) translateZ(-60px);
		}
	}

	.subtitle, .back-text {
		-webkit-text-stroke: 0.5px rgba(212, 212, 212, 0.1);
		filter: drop-shadow(0 0 2px rgba(212, 212, 212, 0.1));
		backdrop-filter: blur(0.5px);
	}

	.subtitle {
		font-size: var(--font-size-lg);
		margin-bottom: var(--spacing-lg);
		opacity: 0.8;
		line-height: 1.6;
		transform: rotate(-8deg) skew(4deg, -4deg);
		transform-origin: center;
		text-shadow: 
			-1px -1px 0 rgba(212, 212, 212, 0.2),
			1px 1px 15px rgba(0, 0, 0, 0.5);
		animation: float 4s ease-in-out infinite, glitch 3s infinite;
		position: relative;
	}

	.glitch-text::before,
	.glitch-text::after {
		content: attr(data-text);
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		opacity: 0.8;
	}

	.glitch-text::before {
		animation: glitch-effect 3s infinite;
		color: #ff00c1;
		z-index: -1;
	}

	.glitch-text::after {
		animation: glitch-effect 2s infinite reverse;
		color: #3498db;
		z-index: -2;
	}

	.back-text {
		font-size: var(--font-size-lg);
		transform: rotate(-12deg) skew(8deg, -6deg);
		transform-origin: center;
		text-shadow: 
			-2px -2px 0 rgba(212, 212, 212, 0.2),
			2px 2px 20px rgba(0, 0, 0, 0.6);
		position: relative;
		filter: blur(0.5px);
	}

	.back-link {
		font-size: var(--font-size-lg);
		text-decoration: underline;
		display: inline-block;
		transform-style: preserve-3d;
		transition: all 0.3s ease;
	}

	.back-link:hover {
		opacity: 0.7;
		transform: 
			translateZ(60px)
			rotateY(35deg)
			scale(1.1);
		text-shadow: 
			-3px -3px 0 rgba(212, 212, 212, 0.3),
			-6px -6px 0 rgba(212, 212, 212, 0.2),
			2px 2px 30px rgba(0, 0, 0, 0.7),
			4px 8px 12px rgba(0, 0, 0, 0.6),
			-4px -8px 12px rgba(212, 212, 212, 0.2);
		filter: brightness(1.2) contrast(1.1);
	}

	.vignette {
		display: none;
	}

	@keyframes float {
		0%, 100% {
			transform: 
				rotate(-12deg) 
				skew(8deg, -6deg) 
				scale(0.95, 0.90)
				translateZ(40px)
				translateX(40px)
				rotateY(25deg)
				translateY(0);
		}
		50% {
			transform: 
				rotate(-12deg) 
				skew(8deg, -6deg) 
				scale(0.95, 0.90)
				translateZ(40px)
				translateX(40px)
				rotateY(25deg)
				translateY(-10px);
		}
	}

	@keyframes glitch-effect {
		0% {
			transform: translate(0);
		}
		20% {
			transform: translate(-3px, 3px);
		}
		40% {
			transform: translate(-3px, -3px);
		}
		60% {
			transform: translate(3px, 3px);
		}
		80% {
			transform: translate(3px, -3px);
		}
		100% {
			transform: translate(0);
		}
	}

	@keyframes glitch {
		0% {
			opacity: 1;
			transform: translate(0) skew(0deg);
		}
		2% {
			opacity: 0.9;
			transform: translate(-3px) skew(-3deg);
		}
		4% {
			opacity: 0.8;
			transform: translate(3px) skew(3deg);
		}
		50% {
			opacity: 1;
			transform: translate(0) skew(0deg);
		}
		52% {
			opacity: 0.8;
			transform: translate(5px) skew(5deg);
		}
		54% {
			opacity: 0.9;
			transform: translate(-5px) skew(-5deg);
		}
		100% {
			opacity: 1;
			transform: translate(0) skew(0deg);
		}
	}

	@keyframes distort {
		0% {
			filter: blur(0);
		}
		25% {
			filter: blur(1px);
			transform: 
				rotate(-12deg) 
				skew(10deg, -8deg) 
				scale(0.93, 0.88)
				translateZ(45px)
				translateX(45px)
				rotateY(30deg);
		}
		75% {
			filter: blur(2px);
			transform: 
				rotate(-14deg) 
				skew(6deg, -4deg) 
				scale(0.97, 0.92)
				translateZ(35px)
				translateX(35px)
				rotateY(20deg);
		}
		100% {
			filter: blur(0);
		}
	}

	@keyframes vignettePulse {
		0%, 100% {
			background: radial-gradient(
				circle at center,
				transparent 30%,
				rgba(0, 0, 0, 0.6) 90%,
				rgba(0, 0, 0, 0.95) 100%
			);
		}
		50% {
			background: radial-gradient(
				circle at center,
				transparent 35%,
				rgba(0, 0, 0, 0.5) 85%,
				rgba(0, 0, 0, 0.9) 100%
			);
		}
	}
</style>